        <!-- Script xử lý sự kiện cuộn và hiệu ứng -->
        <script>
            window.addEventListener('scroll', function() {
                const header = document.querySelector('.mario-enhanced-header');
                if (window.scrollY > 50) {
                    header.classList.add('scrolled');
                } else {
                    header.classList.remove('scrolled');
                }
            });

            // Thêm đồng xu mới
            function addNewCoins() {
                const header = document.querySelector('.mario-enhanced-header');
                const positions = [
                    {top: '15%', left: '30%'},
                    {top: '25%', left: '60%'},
                    {top: '5%', left: '80%'}
                ];
                
                positions.forEach(pos => {
                    const coin = document.createElement('div');
                    coin.className = 'mario-coin';
                    coin.innerHTML = '🪙';
                    coin.style.top = pos.top;
                    coin.style.left = pos.left;
                    header.appendChild(coin);
                    
                    // Xóa đồng xu sau khi animation kết thúc
                    setTimeout(() => {
                        if (coin && coin.parentNode) {
                            header.removeChild(coin);
                        }
                    }, 3000);
                });
            }
            
            // Thêm đồng xu mỗi 7 giây
            setInterval(addNewCoins, 7000);
        </script>

